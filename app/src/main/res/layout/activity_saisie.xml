<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.renaud.cible.SaisieActivity">


    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="366dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Date"
        app:layout_constraintBottom_toTopOf="@+id/textViewSaisie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSaisie"
        android:layout_width="368dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        tools:text="7,8,9,10,9 (Tot  : 38/50, Moy : 7)"
        android:textSize="50px"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableBottom="@color/colorAccent"
        />

    <ListView

        android:id="@+id/listView"
        android:layout_width="365dp"
        android:layout_height="109dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/row_cinqtir"
       />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="366dp"
        android:layout_height="269dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="handleClickButton0"
            android:text="0" />


        <Button
            android:id="@+id/button1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="handleClickButton1"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="handleClickButton2"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="handleClickButton3"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:onClick="handleClickButton4"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:onClick="handleClickButton5"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="handleClickButton6"
            android:text="6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button7"
            android:layout_column="3"
            android:layout_row="1"
            android:onClick="handleClickButton7"
            android:text="7"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button8"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="handleClickButton8"
            android:text="8"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button9"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="handleClickButton9"
            android:text="9"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/button10"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="handleClickButton10"
            android:text="10"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/buttonCancelLast"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="handleClickButtonCancelLast"
            android:text="Eff"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"/>

        <Button
            android:id="@+id/buttonOk"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="handleClickButtonOk"
            android:text="Ok"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"/>

        <Button
            android:id="@+id/buttonSaveSession"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="handleClickButtonSaveSession"
            android:text="Sauve"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"/>


    </GridLayout>


</android.support.constraint.ConstraintLayout>
